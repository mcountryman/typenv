{
  "compilerOptions": {
    "lib": ["es5", "es6"],

    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",

    "module": "commonjs",
    "pretty": true,
    "target": "es5",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "**/*_spec.ts",
    "node_modules"
  ],
  "typedocOptions": {
    "out": "docs",
    "mode": "modules",
    "readme": "./README.md",
    "exclude": "**/*_spec.ts",
    "entryPoint": "\"index\"",
    "inputFiles": ["./src"]
  }
}