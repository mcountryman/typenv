{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",

    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "**/*_spec.ts",
    "node_modules"
  ],
  "typedocOptions": {
    "out": "docs",
    "mode": "modules",
    "readme": "README.md",
    "exclude": "**/*_spec.ts",
    "entryPoint": "\"index\"",
    "inputFiles": ["./src"]
  }
}